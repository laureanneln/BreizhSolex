{% block body %}

<section class="about container">
    <div class="about__buttons flex around">

        {% for about in abouts %}
            <button class="about__buttons_button {{ (loop.first) ? 'active" id="defaultOpen"' }}" onclick="openCity(event, 'tab_{{ about.name|replace({"'" : ""}) }}')" >{{ about.name }}</button>
        {% endfor %}

    </div>

    {% for about in abouts %}
        <article id="tab_{{ about.name|replace({"'" : ""}) }}" class="about__tab">
            <div class="about__tab_content">
                {{ about.content }}
            </div>
        </article>
    {% endfor %}
</section>

{% endblock %}