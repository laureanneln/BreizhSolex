{% extends 'base.html.twig' %}

{% block title %}Modifier les informations{% endblock %}

{% block body %}

    <section class="container account">
        <a href="{{ path('accountpage') }}" class="btn btn-primary adminback "><i class="fas fa-arrow-left"></i> Retour aux informations</a>

        <h2>Modifier les informations</h2>
        
        <form method="post" class="form">
            <div class="form__group">
                <label>Prénom</label>
                            
                {% if form.first_name.vars.errors|length %}
                    <div class="invalid">
                            { form_errors(form.first_name) }}
                        <i class="fas fa-times"></i>
                    </div>
                {% endif %}
            
                {{ form_widget(form.first_name) }}
            </div>

            <div class="form__group">
                <label>Nom</label>
                    
                {% if form.last_name.vars.errors|length %}
                    <div class="invalid">
                        {{ form_errors(form.last_name) }}
                        <i class="fas fa-times"></i>
                    </div>
                {% endif %}
    
                {{ form_widget(form.last_name) }}
            </div>
    
            <div class="form__group">
                <label>Email</label>
    
                {% if form.email.vars.errors|length %}
                    <div class="invalid">
                        {{ form_errors(form.email) }}
                        <i class="fas fa-times"></i>
                    </div>
                {% endif %}
    
                {{ form_widget(form.email) }}
            </div>

            <div class="form__group">
                <label>Téléphone</label>
    
                {% if form.phone_number.vars.errors|length %}
                    <div class="invalid">
                        {{ form_errors(form.phone_number) }}
                        <i class="fas fa-times"></i>
                    </div>
                {% endif %}
                    
                {{ form_widget(form.phone_number) }}
            </div>
    
            <div class="form__group">
                <input type="submit" value="Enregistrer">
            </div>

            {{ form_rest(form) }}

        </form>

    </section>

{% endblock %}
