{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des commandes{% endblock %}

{% block body %}
    <section class="adminorders container listing">

        <h2>Gestion des commandes</h2>
        <small>Total : {{ total }}</small>

        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }}" style="margin: 15px 0; width: 98%;">
                {% for message in messages %}
                    {{ message | raw }}
                {% endfor %}
            </div>
        {% endfor %}

        <table class="admintable">
            <thead>
                <tr>
                    <th>Num√©ro</th>
                    <th>Client</th>
                    <th>Produits</th>
                    <th>Total</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    {% if order.status.id == 1 %}
                        {% set status = 'warning' %}
                    {% elseif order.status.id == 2 %}
                        {% set status = 'info' %}
                    {% elseif order.status.id == 3 %}
                        {% set status = 'great' %}
                    {% elseif order.status.id == 4 %}
                        {% set status = 'success' %}
                    {% elseif order.status.id == 5 or order.status.id == 6 %}
                        {% set status = 'danger' %}
                    {% endif %}

                {% set total = 0 %}
                {% for item in order.items %}
                    {% set total = total + item.quantity %}
                {% endfor %} 

                    <tr>
                        <td>{{ order.id }}</td>
                        <td>#{{ order.user.id }} - {{ order.user.firstName }} {{ order.user.lastName }}</td>
                        <td>{{ total }}</td>
                        <td>{{ order.totalPrice | number_format(2, ',', ' ')}} &euro;</td>
                        <td><span class="badge badge-{{ status }}">{{ order.status.label }}</span></td>
                        <td>
                            <a href="{{ path('adminorder', {'id': order.id}) }}" class="btn btn-success"><i class="fas fa-eye"></i> Voir</a>
                            {% if order.status.id == 1 or order.status.id == 2 or order.status.id == 3 %}
                                <a href="{{ path('adminorder_edit', {'id': order.id}) }}" class="btn btn-info"><i class="fas fa-pencil-alt"></i> Modifier</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </section>
{% endblock %}
