{% extends 'admin/base.html.twig' %}

{% block title %}Modifier les horaires de {{ hour.dayName }}{% endblock %}

{% block body %}

    <section class="admininfos hours container edit">

        <a href="{{ path('admininformations') }}" class="adminback btn btn-primary"><i class="fas fa-arrow-left"></i> Retour aux informations</a>

        <h2 style="text-align: center">Modifier les horaires de {{ hour.dayName }}</h2>

        <form method="post" class="form select2form flex">
            <div class="form__group flex">
                <label>Ouvre à</label>
                                
                {% if form.opening_hour.vars.errors|length %}
                        <div class="invalid">
                            { form_errors(form.opening_hour) }}
                        <i class="fas fa-times"></i>
                    </div>
                {% endif %}
                
                {{ form_widget(form.opening_hour) }}
            </div>

            <div class="form__group flex">
                    <label>Ferme à</label>
                                    
                    {% if form.closing_hour.vars.errors|length %}
                            <div class="invalid">
                                { form_errors(form.closing_hour) }}
                            <i class="fas fa-times"></i>
                        </div>
                    {% endif %}
                    
                    {{ form_widget(form.closing_hour) }}
                </div>
        
            <div class="form__group">
                <input type="submit" value="Valider">
            </div>
    
            {{ form_rest(form) }}
    
        </form>

    </section>

{% endblock %}
