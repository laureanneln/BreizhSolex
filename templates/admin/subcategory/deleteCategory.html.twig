{% extends 'admin/base.html.twig' %}

{% block title %}Supprimer {{ category.name }}{% endblock %}

{% block body %}

    <section class="container edit">
        <a href="{{ path('admincategories') }}" class="btn btn-primary adminback "><i class="fas fa-arrow-left"></i> Retour à la liste des catégories</a>
        <h2>Suppression d'une catégorie</h2>
        
        <form class="form">

            <div class="form__group">
                <p style="text-align: center;">Êtes-vous sûr de vouloir supprimer la catégorie "{{ category.name }}" ?</p>
                <small style="text-align: center; margin: 0; width: 100%; display: block;">Vous ne pourrez pas revenir sur cette action.</small>
                <br>
                <a href="{{ path('admincategory_suretodelete', {'id' : category.id}) }}" class="btn btn-danger" style="margin: 10px auto 0;">
                    Je veux supprimer cette catégorie
                </a>
            </div>
        </form>
        

    </section>

{% endblock %}
