                    </div>
                {% endif %}
    
                {{ form_widget(form.description) }}
            </div>
    
            <div class="form__group">
                {{ form_label(form.height) }}
    
                {% if form.height.vars.errors|length %}
                    <div class="invalid">
                        {{ form_errors(form.height) }}
