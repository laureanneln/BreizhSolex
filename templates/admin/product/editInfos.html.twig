{% extends 'admin/base.html.twig' %}

{% block title %}Modifier {{ product.name }}{% endblock %}

{% block body %}

    <section class="container edit">
        <a href="{{ path('adminproducts') }}" class="btn btn-primary adminback "><i class="fas fa-arrow-left"></i> Retour Ã  la liste des produits</a>
        <h2>Modification d'un produit</h2>
        
        <form method="post" class="form">
            <div class="form__group">
                {{ form_label(form.image) }}
                            
                {% if form.image.vars.errors|length %}
                    <div class="invalid">
                            { form_errors(form.image) }}
                        <i class="fas fa-times"></i>
                    </div>
                {% endif %}
            
                {{ form_widget(form.image) }}
            </div>

            <div class="form__group">
                {{ form_label(form.name) }}
                    
                {% if form.name.vars.errors|length %}
                    <div class="invalid">
                        {{ form_errors(form.name) }}
                        <i class="fas fa-times"></i>
                    </div>
                {% endif %}
    
                {{ form_widget(form.name) }}
            </div>
    
            <div class="form__group">
                {{ form_label(form.reference) }}
    
                {% if form.reference.vars.errors|length %}
                    <div class="invalid">
                        {{ form_errors(form.reference) }}
